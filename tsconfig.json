{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "baseUrl": "src/",
        "outDir": "./dist",
        "rootDir": "./",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "@app/*": [
                "./app/modules/*"
            ],
            "@shared/*": [
                "./app/shared/*"
            ],
        },
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
    }
}